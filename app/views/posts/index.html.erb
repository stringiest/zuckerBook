<% @posts.each do |post| %>
  <div class="card mb-5 mx-auto" style="width: 80%;">
    <span class="card-header">
      <b>
        <%= post.user.username.capitalize %>
      </b>
      <i>
        posted
        <%= time_ago_in_words(post.created_at) %> ago
      </i>
      <% if post.user == current_user %>
      <span style="float: right;">
        <%= link_to "Edit", edit_post_path(post) %>
        <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?"} %>
      </span>
      <% end %>
    </span>
    <span class="d-inline-flex">
      <img src="<%=asset_path('profilepic.png')%>" alt="<%= post.user.username %>'s profile picture" class="img-thumbnail rounded m-2" style="height: 100%;">
      <p class="text-justify m-2"><%= post.body %></p>
    </span>
    <span class="card-footer">
      <span>
        <%= link_to '<i class="far fa-comment"></i>'.html_safe, post_path(post), class: "ml-3", style: "max-width: 20px;" %>
        <%= post.comments.length %>
      </span>
      <span class="ml-2" id="likes-form-container">
        <% if liked?(post) %>
          <%= link_to "<i id='liked-btn-#{post.id}' class='far fa-thumbs-up text-primary'></i>".html_safe, post_likes_path(post), method: :post, remote: true %>
        <% else %>
          <%= link_to "<i id='liked-btn-#{post.id}' class='far fa-thumbs-up text-secondary'></i>".html_safe, post_likes_path(post), method: :post, remote: true %>
        <% end %>
        <span id="post-like-count-<%=post.id%>"> 
          <%= post.likes.uniq {|like| like.user_id }.count %> 
        </span>
      </span>
   
      <%= form_for @comment do |f| %>
      <span class="input-group ml-3" style="max-width: 400px; min-width: 100px; float: right;">
        <%= f.hidden_field :post_id, value: post.id %>
        <%= f.text_field :body, class: "form-control form-control-sm" %>
        <%= f.submit 'Comment', class: "btn btn-success btn-sm ml-3" %>
    </span>
    <% end %>
    </span>
  </div>
<% end %>