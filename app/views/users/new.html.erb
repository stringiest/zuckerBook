<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <div class="alert alert-danger text-center mx-auto" role="alert">
        <%= msg %>
      </div>
    <% end %>
  <% end %>

  <div class="card mx-auto text-left px-4 pt-4 pb-3 mt-5" style="width: 375px;">
    <h3 class="card-title mb-3 text-center" style="font-weight: lighter;">Join our Family</h3>
    <%= f.text_field :username, placeholder: 'username', class: "form-control mb-3" %>
    <%= f.text_field :email, placeholder: 'email', class: "form-control mb-3" %>
    <%= f.password_field :password, placeholder: 'password', class: "form-control mb-3" %>
    <%= f.password_field :password_confirmation, placeholder: 'password confirmation', class: "form-control mb-3" %>
    <%= label(:avatar, "profile picture", class: "ml-2") %> 
    <%= f.file_field :avatar, required: true, class: "form-control-file mb-3" %>
    <%= f.submit 'Sign Up', class: "btn btn-success" %>
  <% end %>
</div>
